rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /cars/{carId} {
      // Allow public read access to all car listings.
      allow read: if true;

      // Allow write access only for authenticated users.
      // This is a basic rule; in a real app, you'd likely restrict this to admins.
      allow write: if request.auth != null;
    }

    // You might have a users collection to store roles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
